{
  "eslint.options": {
    "overrideConfigFile": ".eslintrc.json"
  },
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.formatOnType": false, // Not needed, as you're formatting on save
  "editor.formatOnPaste": true, // Optional
  "editor.formatOnSave": true, // Ensure format on save
  "editor.formatOnSaveMode": "file", // Format the file on save
  "files.autoSave": "onWindowChange", // Optional, saves on window focus change
  "vs-code-prettier-eslint.prettierLast": true, // Ensure prettier runs last after eslint
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always" // Ensure eslint fixes are applied automatically
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "eslint.ignoreUntitled": true,
  "eslint.run": "onSave",
  "eslint.codeActionsOnSave.rules": [], // Set to an empty array instead of null
  "eslint.workingDirectories": [],
  "eslint.probe": [
    "astro",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "mdx",
    "vue",
    "markdown",
    "json",
    "jsonc",
    "react"
  ]
}